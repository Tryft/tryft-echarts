{
  "name": "@tryft/echarts",
  "version": "0.1.0",
  "type": "module",
  "description": "A React component library wrapper for Apache ECharts",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "test": "npm run type-check && npm run lint",
    "prepare": "husky"
  },
  "keywords": [
    "react",
    "echarts",
    "charts",
    "components",
    "visualization",
    "typescript"
  ],
  "author": "TryFT",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tryft/echarts.git"
  },
  "bugs": {
    "url": "https://github.com/tryft/echarts/issues"
  },
  "homepage": "https://github.com/tryft/echarts#readme",
  "peerDependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "dependencies": {
    "d3": "^7.9.0",
    "echarts": "^5.4.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix",
    "*.{ts,tsx,js,jsx,json,md}": "prettier --write"
  },
  "devDependencies": {
    "@storybook/addon-docs": "^9.0.2",
    "@storybook/addon-links": "^9.0.2",
    "@storybook/react-vite": "^9.0.2",
    "@storybook/test": "^8.6.14",
    "@stylistic/eslint-plugin": "^4.4.0",
    "@types/d3": "^7.4.3",
    "@types/node": "^22.15.28",
    "@types/react": "19.1.6",
    "@types/react-dom": "19.1.5",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "@vitejs/plugin-react": "^4.5.0",
    "audit-ci": "^7.1.0",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^9.0.2",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "storybook": "^9.0.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "overrides": {
    "storybook": "$storybook"
  }
}
